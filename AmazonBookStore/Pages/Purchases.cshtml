@page
@model AmazonBookStore.Pages.PurchasesModel
@{
}

<h2>Your Cart</h2>

<!-- This table displays the session cart of the user with the functionality to
     display items in the cart, remove an item, and continue shopping -->

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Book Title</th><th>Quantity</th><th>Price</th><th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
        <tr>
            <td class="text-left">@line.BookInfo.Title</td>
            <td class="text-center">@line.Quanity</td>
            <td class="text-right">@line.BookInfo.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-us"))</td>
            <td class="text-right">@((line.Quanity * line.BookInfo.Price).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-us")))</td>
            <td class="text-center">
                <form asp-page-handler="Remove" method="post">
                    <input type="hidden" name="Id"
                           value="@line.BookInfo.Id" />
                    <input type="hidden" name="returnUrl"
                           value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-danger">
                        Remove
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">@Model.Cart.TotalSum().ToString("c", System.Globalization.CultureInfo.GetCultureInfo("en-us"))</td>
        </tr>
    </tfoot>

</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>
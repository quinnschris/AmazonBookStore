@model Cart

<!-- This view component is used to show the amount in a cart, and serves as a way to access the cart without
     the need to add an item into the cart -->

<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Lines.Sum(x => x.Quanity) item(s)
            @Model.TotalSum().ToString("c", System.Globalization.CultureInfo.GetCultureInfo("en-us"))
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Purchases"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>